{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "target": "ESNext",
    "sourceMap": false,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "composite": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".",
    "outDir": "dist"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./dist/**/*", "./tests/**/*"]
}
